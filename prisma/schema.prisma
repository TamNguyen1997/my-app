// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model category {
  id        String    @id
  name      String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  product   product[]
}

model product {
  id          String    @id
  category    category? @relation(fields: [categoryId], references: [id])
  categoryId  String?   @map("category_id")
  description String?
  imageUrl    String?   @map("image_url")
  imageAlt    String?   @map("image_alt")
  price       Int?
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  primarySaleDetails   primary_sale_detail[]
  secondarySaleDetails secondary_sale_detail[]
  technicalDetails     technical_detail[]
  popularProduct       popular_product?

  @@index([categoryId])
}

model popular_product {
  product   product @relation(fields: [productId], references: [id])
  productId String  @id @map("product_id")

  @@index([productId])
}

model technical_detail {
  key       String
  value     String
  product   product @relation(fields: [productId], references: [id])
  productId String  @map("product_id")

  @@id([key, productId])
  @@index([productId])
}

model primary_sale_detail {
  id                    String                  @id @db.Uuid
  product               product                 @relation(fields: [productId], references: [id])
  productId             String                  @map("product_id")
  key                   String
  value                 String
  secondary_sale_detail secondary_sale_detail[]

  @@index([productId])
}

model secondary_sale_detail {
  id    String @id @db.Uuid
  key   String
  value String

  primarySaleDetail   primary_sale_detail @relation(fields: [primarySaleDetailId], references: [id])
  primarySaleDetailId String              @map("primary_sale_detail_id")

  product   product @relation(fields: [productId], references: [id])
  productId String  @map("product_id")

  @@index([productId])
  @@index([primarySaleDetailId])
}
